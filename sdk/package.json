{
  "name": "@beevk/newsapi-sdk",
  "description": "Typed Sdk for NewsApi (for a demo)",
  "main": "./lib/index.js",
  "typings": "./lib/index",
  "module": "./lib.es2015/index.js",
  "jsnext:main": "./lib.es2015/index.js",
  "keywords": [],
  "author": "beevk",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/beevk/articles"
  },
  "homepage": "https://github.com/beevk/articles",
  "dependencies": {
    "autobind-decorator": "^2.4.0"
  },
  "peerDependencies": {
    "@crazyfactory/tinka": "^1.9.2"
  },
  "devDependencies": {
    "@crazyfactory/tinka": "^1.9.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^13.1.0",
    "del-cli": "^3.0.0",
    "jest": "^23.6.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "test": "jest",
    "test:no-cache": "jest --no-cache",
    "test:watch": "jest --watch",
    "build": "npm run clean && tsc -p . && tsc -p tsconfig.es2015.json",
    "clean": "del-cli ./lib ./lib.es2015 ./coverage ./umd/**/*.js",
    "lint": "tslint -t stylish --project tsconfig.json './src/**/*.ts'",
    "lint:fix": "npm run lint -s -- --fix"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "cacheDirectory": "<rootDir>/.jest/cache",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coveragePathIgnorePatterns": [
      "index.ts"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "npm run lint -s",
      "pre-push": "npm run build -s && npm run test -s"
    }
  }
}
